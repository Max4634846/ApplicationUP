<Window x:Class="ApplicationUP.Views.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ApplicationUP.Views"
        xmlns:viewModel="clr-namespace:ApplicationUP.ViewModels"
        xmlns:customcontrols="clr-namespace:ApplicationUP.CustomControls"
        mc:Ignorable="d"
        Title="Login" Height="760" Width="1000" WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        AllowsTransparency="True"
        WindowStyle="None" Icon="/image/IconCurort.png">
    
    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <materialDesign:Card Margin="500,100,50,100" UniformCornerRadius="30">
        <materialDesign:Card.Background>
            <SolidColorBrush Color="Transparent"/>
        </materialDesign:Card.Background>
        <materialDesign:Card.RenderTransform>
            <TranslateTransform X="-300"/>
        </materialDesign:Card.RenderTransform>

        <materialDesign:Card.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.0" To="1.0" Duration="0:0:3"/>
                        <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                From="-300" To="0" Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </materialDesign:Card.Triggers>
        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="DialogHost">

            <StackPanel Margin="0,0,0,-17">
                <materialDesign:PopupBox HorizontalAlignment="Right" Margin="0 20 20 0" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Height="25">
                    <StackPanel>

                        <StackPanel Margin="16 10 0 6" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock  VerticalAlignment="Center" Text="Dark Mode" />
                            <ToggleButton Cursor="Hand" ToolTip="Enable Dark Mode" Margin="12 0 8 0" x:Name="themeToggle" IsChecked="{Binding IsDarkTheme}" Click="toggleTheme"/>
                        </StackPanel>

                        <Button x:Name="Btn_Exit" ToolTip="Close Application" Content="Exit Application" Click="exit"/>

                    </StackPanel>
                </materialDesign:PopupBox>
                <Image Margin="5 10 0 5" Source="/image/UseLogoOne.png" Height="80" Width="150" />
                <TextBlock Margin="0 15 0 5" Text="Welcome, enter your login!" HorizontalAlignment="Center"  FontSize="25" 
                           FontWeight="Bold"/>

                <TextBox Margin="0 50 0 0" x:Name="txtUser" Width="300" FontSize="20"
                         materialDesign:HintAssist.Hint="Username" Style="{StaticResource MaterialDesignTextBoxBase}" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>

                <customcontrols:BindablePasswordBox materialDesign:HintAssist.Hint="Password" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding ErrorMessage}" FontSize="25" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                <Button Margin="0 50 0 0" Width="200" Height="50" Content="Sign In" FontSize="20" Command="{Binding LoginCommand}"/>

                <Button Margin="0,10,0,0" x:Name="signupBtn" 
                Style="{StaticResource MaterialDesignFlatButton}"
                Height="53" Width="130" materialDesign:ButtonAssist.CornerRadius="10"
                FontSize="18" Content="Sign Up">
                </Button>
            </StackPanel>

        </materialDesign:DialogHost>
    </materialDesign:Card>

</Window>
