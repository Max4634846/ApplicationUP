<Window x:Class="ApplicationUP.Views.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUP.Views"
        xmlns:viewModel="clr-namespace:ApplicationUP.ViewModels"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None" 
        Icon="/image/IconCurort.png">
    <Window.Background>
        <ImageBrush ImageSource="/image/FoneTwoDark.jpg" />
    </Window.Background>
    <Grid>
        <Grid VerticalAlignment="Top">
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top" >
                <Button Width="25" Height="25" Margin="5" Content="-" Foreground="White" Click="Minimize_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="#5110" Offset="0"/>
                            <GradientStop Color="#42aaff" Offset="1.5"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Width="25" Height="25" Margin="5" Content="X" Foreground="White" Click="Close_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="#5110" Offset="0"/>
                            <GradientStop Color="#8A16C1" Offset="1.5"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </DockPanel>
        </Grid>
        <local:SwitchToggle x:Name="BtnToggle"
                            Margin="5"
                            Width="40" 
                            Height="30"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            MouseLeftButtonDown="SwitchToggle_MouseLeftButtonDown"/>
        
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Name="MainFrame"/>
    </Grid>

</Window>
